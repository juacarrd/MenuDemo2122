<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/listaStarks"
        android:layout_width="322dp"
        android:layout_height="140dp"
        android:layout_above="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:entries="@array/starks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tapatalk"
        app:layout_constraintEnd_toEndOf="@+id/listaStarks"
        app:layout_constraintStart_toStartOf="@+id/listaStarks"
        app:layout_constraintTop_toBottomOf="@+id/listaStarks" />

    <ListView
        android:id="@+id/listaLannisters"
        android:layout_width="334dp"
        android:layout_height="132dp"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:choiceMode="multipleChoice"
        android:entries="@array/lannisters"
        app:layout_constraintEnd_toEndOf="@+id/listaStarks"
        app:layout_constraintStart_toStartOf="@+id/listaStarks"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

</androidx.constraintlayout.widget.ConstraintLayout>